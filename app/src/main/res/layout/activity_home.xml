<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2E2E"
    tools:context=".home">
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/cookie"
        app:layout_constraintEnd_toStartOf="@+id/maintext"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="5dp">
    </ImageView>
    <TextView
        android:id="@+id/maintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SNACK AUDIOBOOK"
        android:textSize="17dp"
        android:textColor="#ffffff"
        android:fontFamily="@font/multicolorepro"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp"
        android:layout_marginStart="25dp">
    </TextView>
    <ImageView
        android:id="@+id/adnumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ad"
        app:layout_constraintTop_toBottomOf="@+id/maintext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">
    </ImageView>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/abcdefg"
        app:layout_constraintEnd_toEndOf="@+id/adnumber"
        app:layout_constraintBottom_toBottomOf="@+id/adnumber"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="19dp">
    </ImageView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="344dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/audiotext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/suitregular"
                android:text="추천 오디오 >"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </TextView>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/happylemon"
                android:layout_marginTop="62dp"
                android:layout_marginStart="-100dp">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="화제의 오디오 >"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:fontFamily="@font/suitregular"
                android:layout_marginStart="20dp"
                android:layout_marginTop="723dp">
            </TextView>
        </LinearLayout>
    </ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nvbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#121212"
        app:itemIconTint="#ffffff"
        app:itemTextColor="#99ffffff"
        app:labelVisibilityMode="labeled"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu" />
</androidx.constraintlayout.widget.ConstraintLayout>