<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/highlight"
        app:layout_constraintBottom_toBottomOf="@+id/logintexthello"
        android:layout_marginBottom="43dp"
        app:layout_constraintStart_toStartOf="@+id/logintext"
        />
    <TextView
        android:id="@+id/logintext"
        android:fontFamily="@font/suitsemibold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="반가워요,"
        android:textColor="#4B35D4"
        android:textSize="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="34dp"
        android:layout_marginTop="200dp"/>

    <TextView
        android:id="@+id/logintexthello"
        android:fontFamily="@font/suitsemibold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인을 시작해볼까요?"
        android:textColor="#4B35D4"
        android:textSize="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logintext"
        android:layout_marginStart="34dp"/>

    <TextView
        android:id="@+id/idid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:textColor="#7A7A7A"
        android:textSize="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="300dp"
        android:layout_marginStart="28dp">

    </TextView>

    <EditText
        android:id="@+id/edittextid"
        android:layout_width="355dp"
        android:layout_height="54dp"
        android:background="@drawable/edittext_design"
        android:hint="아이디를 입력해주세요"
        android:textColorHint="#7A7A7A"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idid" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edittexthighlight"
        app:layout_constraintTop_toBottomOf="@+id/edittextid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/pwpw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:textColor="#0f7A7A7A"
        android:textSize="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="300dp"
        android:layout_marginStart="28dp">

    </TextView>

    <EditText
        android:id="@+id/edittextpassword"
        android:textColorHint="#7A7A7A"
        android:hint="비밀번호를 입력해주세요"
        android:layout_width="355dp"
        android:layout_height="54dp"
        app:layout_constraintTop_toBottomOf="@+id/pw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/edittext_design"/>

    <TextView
        android:id="@+id/pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textSize="12dp"
        app:layout_constraintTop_toBottomOf="@id/edittextid"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="28dp"
        android:layout_marginTop="15dp"
        >
    </TextView>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edittexthighlight"
        app:layout_constraintTop_toBottomOf="@+id/edittextpassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/idfindtext"
        android:fontFamily="@font/suitregular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="계정 찾기"
        android:textColor="#B4B3EC"
        app:layout_constraintTop_toBottomOf="@+id/edittextpassword"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginStart="136dp"/>

    <ImageView
        android:id="@+id/bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/idfindtext"
        app:layout_constraintTop_toTopOf="@+id/idfindtext"
        app:layout_constraintBottom_toBottomOf="@+id/idfindtext"
        android:layout_marginStart="7.5dp"
        android:background="@drawable/bar"/>

    <TextView
        android:id="@+id/passwordfindtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/suitregular"
        android:text="비밀번호 찾기"
        android:textColor="#B4B3EC"
        app:layout_constraintTop_toBottomOf="@+id/edittextpassword"
        app:layout_constraintStart_toStartOf="@+id/bar"
        android:layout_marginTop="18dp"
        android:layout_marginStart="8.5dp"/>

    <Button
        android:fontFamily="@font/suitsemibold"
        android:id="@+id/loginbutton"
        android:layout_width="365dp"
        android:layout_height="51dp"
        app:layout_constraintTop_toBottomOf="@+id/bar"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/loginbutton"
        android:text="로그인"
        android:textColor="@color/white"
        android:textSize="17sp"/>

    <Button
        android:id="@+id/registerbutton"
        android:layout_width="365dp"
        android:layout_height="51dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/registerbutton"
        android:fontFamily="@font/suitsemibold"
        android:text="회원가입"
        android:textColor="#4B35D4"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginbutton" />


</androidx.constraintlayout.widget.ConstraintLayout>